<div class="row">

  <div class="col-md-3"></div>
  <div class="col-md-6">

    <div class="card mt-5">
      <div class="card-header bg-dark text-white">
        {{#if editMode}}Edicion{{else}}Creacion{{/if}} de categorias
      </div>
      <div class="card-body">

        <form method="POST" action="{{#if editMode}}/edit-categories{{else}}/create-categories{{/if}}">
          <div class="mb-3">
            <label for="name" class="form-label">Nombre:</label>
            <input type="text" class="form-control" id="name" name="Name" value="{{#if editMode}}{{category.name}}{{/if}}" required />
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Descripcion:</label>
            <textarea class="form-control" rows="3" id="description" name="Description" required>{{#if editMode}}{{category.description}}{{/if}}</textarea>
          </div>      

          {{#if editMode}}

          <input type="hidden" name="categoriesId" value="{{category.id}}">
          
          {{/if}}

          <button type="submit" class="btn btn-primary">{{#if editMode}}Editar{{else}}Crear{{/if}}</button>
           <a href="/categories" type="button" class="btn btn-warning">volver atras</a>
        </form>

      </div>
    </div>

  </div>
  <div class="col-md-6"></div>

</div>