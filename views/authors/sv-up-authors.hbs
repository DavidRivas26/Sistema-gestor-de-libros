<div class="row">

  <div class="col-md-3"></div>
  <div class="col-md-6">

    <div class="card mt-5">
      <div class="card-header bg-dark text-white">
        {{#if editMode}}Edicion{{else}}Creacion{{/if}} de autores
      </div>
      <div class="card-body">

        <form method="POST" action="{{#if editMode}}/edit-authors{{else}}/create-authors{{/if}}">
          <div class="mb-3">
            <label for="name" class="form-label">Nombre:</label>
            <input type="text" class="form-control" id="name" name="Name" value="{{#if editMode}}{{author.name}}{{/if}}" required />
          </div>
          <div class="mb-3">
            <label for="mail" class="form-label">Correo:</label>
            <input type="email" class="form-control" id="mail" name="Mail" value="{{#if editMode}}{{author.mail}}{{/if}}" required />
          </div>          

          {{#if editMode}}

          <input type="hidden" name="authorsId" value="{{author.id}}">
          
          {{/if}}

          <button type="submit" class="btn btn-primary">{{#if editMode}}Editar{{else}}Crear{{/if}}</button>
           <a href="/authors" type="button" class="btn btn-warning">volver atras</a>
        </form>

      </div>
    </div>

  </div>
  <div class="col-md-6"></div>

</div>